-- Load ZenScript library
local Library = loadstring(game:HttpGet("https://raw.githubusercontent.com/WHOLEBAKERY/zenlib/refs/heads/main/zenlib"))()

-- Create main window
local Tabs, MainWindow = Library:Window("ZenScript")

-- =====================
-- First Tab: Zone
-- =====================
local ZoneTab = Tabs:CreateTab("Zone")

-- Infinite Jump Toggle
ZoneTab:CreateToggle("Infinite Jump", function(state)
    if state then
        game:GetService("UserInputService").JumpRequest:Connect(function()
            game.Players.LocalPlayer.Character:FindFirstChildOfClass("Humanoid").Jump = true
        end)
    else
        -- To disable, easiest is to reload the character (simple approach)
        -- or implement a flag check
        print("Infinite Jump Disabled")
    end
end)

-- No Clip Toggle
local noclipEnabled = false
ZoneTab:CreateToggle("No Clip", function(state)
    noclipEnabled = state
end)

-- Heartbeat loop for NoClip
game:GetService("RunService").Stepped:Connect(function()
    if noclipEnabled then
        local character = game.Players.LocalPlayer.Character
        if character then
            for _, part in pairs(character:GetChildren()) do
                if part:IsA("BasePart") then
                    part.CanCollide = false
                end
            end
        end
    else
        local character = game.Players.LocalPlayer.Character
        if character then
            for _, part in pairs(character:GetChildren()) do
                if part:IsA("BasePart") then
                    part.CanCollide = true
                end
            end
        end
    end
end)

-- =====================
-- Second Tab: Shane
-- =====================
local ShaneTab = Tabs:CreateTab("Shane")

-- ESP Button
ShaneTab:CreateButton("ESP", function()
    -- Simple placeholder ESP
    for _, player in pairs(game.Players:GetPlayers()) do
        if player ~= game.Players.LocalPlayer then
            local highlight = Instance.new("Highlight")
            highlight.Parent = player.Character or player.CharacterAdded:Wait()
            highlight.FillColor = Color3.fromRGB(255, 0, 0)
            highlight.OutlineColor = Color3.fromRGB(0, 0, 0)
            highlight.DepthMode = Enum.HighlightDepthMode.AlwaysOnTop
        end
    end
    print("ESP Enabled")
end)

-- Float Button
ShaneTab:CreateButton("Float", function()
    local player = game.Players.LocalPlayer
    local char = player.Character
    if char then
        local root = char:FindFirstChild("HumanoidRootPart")
        if root then
            local bodyForce = Instance.new("BodyForce")
            bodyForce.Force = Vector3.new(0, workspace.Gravity * root:GetMass(), 0)
            bodyForce.Parent = root
            print("Float Enabled")
        end
    end
end)
